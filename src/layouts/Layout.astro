		<script>
			let currentButton: HTMLButtonElement | null = null;
			let currentMenu: HTMLElement | null = null;
			let currentMenuIcon: Element | null = null;
			let currentCloseIcon: Element | null = null;

			function getElements() {
				currentButton = document.getElementById('mobile-menu-button') as HTMLButtonElement;
				currentMenu = document.getElementById('mobile-menu') as HTMLElement;
				currentMenuIcon = document.querySelector('.mobile-menu-icon');
				currentCloseIcon = document.querySelector('.mobile-menu-close');
			}

			function closeMenu() {
				if (!currentMenu || !currentMenuIcon || !currentCloseIcon || !currentButton) return;
				
				currentMenu.classList.add('hidden');
				currentMenuIcon.classList.remove('hidden');
				currentCloseIcon.classList.add('hidden');
				currentButton.setAttribute('aria-expanded', 'false');
				document.body.style.overflow = '';
			}

			function openMenu() {
				if (!currentMenu || !currentMenuIcon || !currentCloseIcon || !currentButton) return;
				
				currentMenu.classList.remove('hidden');
				currentMenuIcon.classList.add('hidden');
				currentCloseIcon.classList.remove('hidden');
				currentButton.setAttribute('aria-expanded', 'true');
				document.body.style.overflow = 'hidden';
			}

			function setupMobileMenu() {
				getElements();

				if (!currentButton || !currentMenu || !currentMenuIcon || !currentCloseIcon) return;

				// Remove existing event listeners if any
				const newButton = currentButton.cloneNode(true) as HTMLButtonElement;
				currentButton.parentNode?.replaceChild(newButton, currentButton);
				currentButton = newButton;

				// Add click handler to button
				currentButton.addEventListener('click', (e) => {
					e.preventDefault();
					const isExpanded = currentButton?.getAttribute('aria-expanded') === 'true';
					if (isExpanded) {
						closeMenu();
					} else {
						openMenu();
					}
				});

				// Close menu when clicking links
				const menuLinks = currentMenu.querySelectorAll('a');
				menuLinks.forEach(link => {
					link.addEventListener('click', (e) => {
						e.preventDefault();
						const href = link.getAttribute('href');
						closeMenu();
						// Use a small timeout to ensure the menu closes smoothly before navigation
						setTimeout(() => {
							if (href) window.location.href = href;
						}, 150);
					});
				});

				// Close menu when clicking outside
				document.addEventListener('click', (event) => {
					const target = event.target as Node;
					if (currentButton && currentMenu && 
						!currentButton.contains(target) && 
						!currentMenu.contains(target)) {
						closeMenu();
					}
				});

				// Close menu on resize
				window.addEventListener('resize', () => {
					if (window.innerWidth >= 1024) {
						closeMenu();
					}
				});
			}

			// Initial setup
			setupMobileMenu();

			// Handle view transitions
			document.addEventListener('astro:page-load', () => {
				getElements();
				setupMobileMenu();
			});

			// Handle content updates
			document.addEventListener('astro:after-swap', () => {
				getElements();
				setupMobileMenu();
			});
		</script>

		<script>
			function setupParallax() {
				const handleParallax = () => {
					const scrolled = window.scrollY;
					
					// Find all elements with parallax classes
					document.querySelectorAll('.parallax-bg').forEach((element) => {
						const speed = 0.5; // Lower number = more subtle effect
						const yPos = -(scrolled * speed);
						element.style.transform = `translate3d(0, ${yPos}px, 0)`;
					});

					document.querySelectorAll('.parallax-content').forEach((element) => {
						const speed = 0.2; // Even more subtle for content
						const yPos = -(scrolled * speed);
						element.style.transform = `translate3d(0, ${yPos}px, 0)`;
					});
				};

				window.addEventListener('scroll', handleParallax);

				// Cleanup
				return () => {
					window.removeEventListener('scroll', handleParallax);
				};
			}

			// Setup on initial load
			setupParallax();

			// Re-setup after view transitions
			document.addEventListener('astro:page-load', setupParallax);
		</script>
